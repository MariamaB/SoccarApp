<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="10dp"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/teamLogo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@drawable/pl_logo2"/>

        <TextView
            android:id="@+id/teamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@+id/teamLogo"
            android:layout_toRightOf="@id/teamLogo"
            android:textSize="30dp"
            android:text="West Bromwich Albion"
            android:textColor="@color/cardview_shadow_start_color"
            android:background="@color/cardview_light_background" />

            <TextView
                android:id="@+id/pointsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/points"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:text="Points: "
                android:textColor="@color/cardview_shadow_start_color"
                android:background="@color/cardview_light_background" />

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="15dp"
            android:textSize="60dp"
            android:text="24"
            android:background="@color/cardview_light_background" />

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv2"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/teamLogo"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="10dp"
        android:layout_alignLeft="@+id/teamLogo">
        <GridLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3">

            <TextView
                android:id="@+id/played"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Played: 3"
                android:textSize="10dp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/win"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Win: 3"
                android:textSize="10dp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/los"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Los: 3"
                android:textSize="10dp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/draw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Draw: 3"
                android:textSize="10dp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/goalsFor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goals for: 3"
                android:textSize="10dp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/goalsAgainst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goals against: 3"
                android:textSize="10dp"
                android:layout_margin="5dp"/>

        </GridLayout>
    </android.support.v7.widget.CardView>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>